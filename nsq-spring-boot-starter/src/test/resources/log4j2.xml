<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %clr{%d{yyyy-MM-dd HH:mm:ss.SSS}}{faint} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n%xwEx
        </Property>
        <Property name="PATH">/var/log/trade/admin/</Property>
    </Properties>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <RollingFile name="debugAbove" fileName="${PATH}debug.log"
                     filePattern="${PATH}debug-%d{yyyy-MM-dd}-%i.log.zip">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <LevelRangeFilter minLevel="debug" maxLevel="trace" onMatch="accept" onMismatch="deny"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="8MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <RollingFile name="infoAbove" fileName="${PATH}info.log"
                     filePattern="${PATH}info-%d{yyyy-MM-dd}-%i.log.zip">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <LevelRangeFilter minLevel="warn" maxLevel="info" onMatch="accept" onMismatch="deny"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="8MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <RollingFile name="errorAbove" fileName="${PATH}error.log"
                     filePattern="${PATH}error-%d{yyyy-MM-dd}-%i.log.zip">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <LevelRangeFilter minLevel="fatal" maxLevel="error" onMatch="accept" onMismatch="deny"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="8MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

    </Appenders>

    <Loggers>
        <Logger level="debug" name="com.github.cossbow" additivity="false">
            <AppenderRef ref="console" />
            <AppenderRef ref="debugAbove" level="trace"/>
            <AppenderRef ref="infoAbove" level="info"/>
            <AppenderRef ref="errorAbove" level="error"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="console"/>
            <AppenderRef ref="infoAbove" level="info"/>
            <AppenderRef ref="errorAbove" level="error"/>
        </Root>
    </Loggers>
</Configuration>
